generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  PENDING
  AWAITING_PAYMENT
  PAYMENT_CONFIRMED
  PROCESSING
  ON_THE_WAY
  DELIVERED
  COMPLETED
  CANCELLED
}

model User {
  id Int @id @default(autoincrement())

  username  String     @unique
  firstname String?
  lastname  String?
  email     String     @unique
  password  String
  avatar    String?
  phone     String?
  birthday  DateTime?
  isActive  Boolean    @default(true) @map("is_active")
  roles     UserRole[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  orders    Order[]

  @@index([username])
  @@map("users")
}

model Roles {
  id   Int    @id @default(autoincrement())
  name String @unique

  userRole UserRole[]
}

model UserRole {
  id      Int   @id @default(autoincrement())
  user_id Int   @map("user_id")
  role_id Int   @map("role_id")
  user    User  @relation(fields: [user_id], references: [id])
  role    Roles @relation(fields: [role_id], references: [id])

  @@index([user_id])
  @@map("users_roles")
}

model Order {
  id          Int         @id @default(autoincrement())
  user_id     Int
  user        User        @relation(fields: [user_id], references: [id])
  order_id    Int
  orderStatus OrderStatus @default(PENDING) @map("order_status")
  consists    OrderMenu[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([user_id])
  @@map("orders")
}

model Menu {
  id          Int         @id @default(autoincrement())
  name        String
  price       Float
  image       String?
  description String?
  order       OrderMenu[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([name])
  @@map("menu")
}

model OrderMenu {
  orderId  Int   @map("order_id")
  menuId   Int   @map("menu_id")
  quantity Int
  order    Order @relation(fields: [orderId], references: [id])
  menuItem Menu  @relation(fields: [menuId], references: [id])

  @@id([orderId, menuId])
  @@index([orderId, menuId])
}
